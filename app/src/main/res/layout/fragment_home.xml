<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".homepage.HomeFragment">

    <LinearLayout
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <LinearLayout
        android:background="#00000000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:background="#00000000"
            android:layout_marginHorizontal="@dimen/marginScreen"
            android:layout_marginTop="35dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ivProfile"
                android:src="@drawable/ic_ava"
                android:layout_width="50dp"
                android:layout_height="50dp"/>

            <LinearLayout
                android:layout_marginLeft="@dimen/marginContent"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:layout_marginTop="5dp"
                    android:textSize="14dp"
                    android:text="Selamat Datang,"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvName"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorWhite"
                    android:text="Pengguna"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <ImageView
                android:id="@+id/ivChat"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_mail_24"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

        <LinearLayout
            android:padding="@dimen/marginScreen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/edSearch"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_form"
                android:drawablePadding="16dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:hint="Pencarian"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_marginRight="@dimen/marginForm"
                android:layout_height="@dimen/heightForm" />
            <Button
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontForm"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:background="@drawable/button_secondary"
                android:layout_height="@dimen/heightForm"
                android:id="@+id/btSearch"
                android:text="Cari" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_marginHorizontal="@dimen/marginScreen"
            app:contentPadding="@dimen/marginContent"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardElevation="5dp"
            app:cardCornerRadius="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:orientation="vertical">

                <TextView
                    style="@style/textHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Layanan" />

                <TextView
                    style="@style/textSubHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginSubHeader"
                    android:text="Silahkan Pilih Kebutuhanmu" />

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/makeUp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingServices"
                        tools:ignore="UseCompoundDrawables">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_icon" />

                        <TextView
                            android:layout_marginTop="5dp"
                            style="@style/textIconHomepage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Make Up" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/hairDo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingServices">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_icon" />

                        <TextView
                            android:layout_marginTop="5dp"
                            style="@style/textIconHomepage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hair Do" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:baselineAligned="false"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/nailArt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingServices">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_icon" />

                        <TextView
                            android:layout_marginTop="5dp"
                            style="@style/textIconHomepage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nail Art" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/henaArt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingServices">

                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            app:srcCompat="@drawable/ic_icon" />

                        <TextView
                            android:layout_marginTop="5dp"
                            style="@style/textIconHomepage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hena Art" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>



        </androidx.cardview.widget.CardView>
    </LinearLayout>


</FrameLayout>