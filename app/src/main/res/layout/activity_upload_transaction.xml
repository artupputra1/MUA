<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/marginScreen"
    tools:context=".booking.UploadTransactionActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            style="@style/textFormBold"
            android:text="Nama Pemilik Rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_marginTop="@dimen/marginForm"
            android:layout_marginLeft="@dimen/marginSubHeader"
            android:text="Admin Marketplace MUA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/textFormBold"
            android:text="Nama Bank "
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_marginTop="@dimen/marginForm"
            android:layout_marginLeft="@dimen/marginSubHeader"
            android:text="Bank BCA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/textFormBold"
            android:text="No Rekening"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_marginTop="@dimen/marginForm"
            android:layout_marginLeft="@dimen/marginSubHeader"
            android:text="034814023"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            style="@style/textFormBold"
            android:text="Total Pembayaran"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvTotal"
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_marginTop="@dimen/marginForm"
            android:layout_marginLeft="@dimen/marginSubHeader"
            android:text="200.000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/tvDateLimit"
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_gravity="center"
            android:text="Batas Waktu Pembayaran"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/colorBlack"
            android:background="@color/colorGray"
            android:layout_marginBottom="@dimen/marginContent"
            android:layout_gravity="center"
            android:text="Informasi \n Dana yang dibayarkan berupa DP sebesar 50%, Untuk sisa 50% dibayarkan saat proses selesai secara offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/ivPaymentProof"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="150dp"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_marginBottom="@dimen/marginForm"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontForm"
            android:layout_width="match_parent"
            android:background="@drawable/button_disabled"
            android:layout_height="45dp"
            android:id="@+id/btUpload"
            android:text="Upload Bukti Transfer" />

        <Button
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontForm"
            android:layout_width="match_parent"
            android:background="@drawable/button_primary"
            android:layout_height="45dp"
            android:id="@+id/btSave"
            android:enabled="false"
            android:text="SIMPAN" />


    </LinearLayout>

</RelativeLayout>