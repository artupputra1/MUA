<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".mua.MuaRegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <TextView
                    android:textColor="@color/colorWhite"
                    android:textAlignment="center"
                    android:textSize="30dp"
                    android:text="MARKETPLACE MUA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                android:padding="@dimen/marginScreen"
                android:background="@drawable/bg_register"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_marginTop="@dimen/marginContentOut"
                    android:layout_gravity="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/fontHeader1"
                    android:textStyle="bold"
                    android:text="Proses Registrasi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/marginSubHeader"
                    android:layout_gravity="center"
                    style="@style/textSubHeader"
                    android:text="@string/subHeaderRegister"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginTop="@dimen/marginContent"
                    style="@style/textForm"
                    android:text="Nama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="@dimen/marginForm"
                    android:id="@+id/edOwner"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_form"
                    android:drawablePadding="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Masukkan Nama"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightForm" />

                <TextView
                    android:layout_marginTop="@dimen/marginContent"
                    style="@style/textForm"
                    android:text="Nama MUA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="@dimen/marginForm"
                    android:id="@+id/edNameMua"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_form"
                    android:drawablePadding="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:hint="Masukkan Nama MUA"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightForm" />

                <TextView
                    android:layout_marginTop="@dimen/marginContent"
                    style="@style/textForm"
                    android:text="Address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="@dimen/marginForm"
                    android:id="@+id/edAddress"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_form"
                    android:drawablePadding="16dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:hint="Masukkan Alamat"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightForm" />

                <TextView
                    android:layout_marginTop="@dimen/marginContent"
                    style="@style/textForm"
                    android:text="Nomor Handphone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <EditText
                    android:layout_marginTop="@dimen/marginForm"
                    android:id="@+id/edPhone"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_form"
                    android:drawablePadding="16dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:hint="Masukkan Nomor Handphone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/heightForm" />

                <Button
                    android:layout_marginTop="@dimen/marginContentOut"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/fontForm"
                    android:layout_gravity="end"
                    android:layout_width="match_parent"
                    android:background="@drawable/button_primary"
                    android:layout_height="@dimen/heightForm"
                    android:id="@+id/btRegister"
                    android:text="REGISTER" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>