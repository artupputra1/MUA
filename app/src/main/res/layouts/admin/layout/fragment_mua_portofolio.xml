<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".provider.detail_provider.PortofolioProviderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:clipToPadding="false"
        android:padding="@dimen/marginScreen"
        android:id="@+id/rvPortofolio"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:padding="@dimen/marginScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/fontForm"
            android:layout_gravity="end"
            android:layout_width="match_parent"
            android:background="@drawable/button_primary"
            android:layout_height="@dimen/heightForm"
            android:id="@+id/btAddPortofolio"
            android:text="TAMBAH PORTOFOLIO" />
    </LinearLayout>

</LinearLayout>