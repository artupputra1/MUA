<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="noActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textHeader">
        <item name="android:textSize">@dimen/fontHeader</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textSubHeader">
        <item name="android:textSize">@dimen/fontSubHeader</item>
    </style>

    <style name="textSubHeaderLink">
        <item name="android:textSize">@dimen/fontSubHeader</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="textIconHomepage">
        <item name="android:textSize">@dimen/fontIconHomepage</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="textForm">
        <item name="android:textSize">@dimen/fontForm</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="textFormBold">
        <item name="android:textSize">@dimen/fontForm</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textRv">
        <item name="android:textSize">@dimen/fontForm</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="textRvBold">
        <item name="android:textSize">@dimen/fontForm</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>